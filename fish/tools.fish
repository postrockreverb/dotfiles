# nvim aliases
alias v "nvim"

# make aliases
alias make "gmake"
alias m "make"

# trash aliases
alias rm "trash"

# reveal aliases
alias reveal "open --reveal"

# bat aliases
alias cat "bat --plain"

# eza aliases
alias ll "eza --long --icons=always --no-user --no-permissions --no-time --group-directories-first"
alias lla "ll -a"

# sleep aliases
alias sleep_in "sudo shutdown -s"
alias sleep_cancel "sudo pkill shutdown"

# battery aliases
alias blim "sudo bclm write 80"
alias bunlim "sudo bclm write 100"
alias bget "bclm read"
